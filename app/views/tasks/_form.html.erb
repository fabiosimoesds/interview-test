
<%= simple_form_for task, html: { class: "task form" } do |f| %>
  <%= f.input :title, input_html: { autofocus: true } %>
  <%= f.input :due_date, input_html: { autofocus: true } %>
  <%= f.input :description, input_html: { autofocus: true } %>
  <%= f.input :completed, input_html: { autofocus: true } %>
  <%= link_to "Cancel", tasks_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
